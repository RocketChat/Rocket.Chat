{
  "compilerOptions": {
    "target": "es2019",
    "module": "ESNext",
    "sourceMap": true,
    "lib": ["es2019"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noEmit": true,
    "types": ["node"]
  }
}
