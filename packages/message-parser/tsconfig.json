{
  "compilerOptions": {
    "rootDir": ".",
    "target": "es2024",
    "module": "preserve",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "lib": ["es2024"],
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "noImplicitThis": true,
    "alwaysStrict": true,
    "erasableSyntaxOnly": true,
    "rewriteRelativeImportExtensions": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
