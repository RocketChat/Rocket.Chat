# Homeserver Mode Configuration
# Set to "microservice" to run as standalone service
# Leave empty or set to "monolith" to run embedded in Rocket.Chat
HOMESERVER_MODE=microservice

# Server Configuration
HOMESERVER_DOMAIN=localhost
HOMESERVER_PORT=8448

# Database Configuration
MONGODB_URL=mongodb://localhost:27017/rocketchat_federation
MONGODB_DB_NAME=rocketchat_federation

# Logging
LOG_LEVEL=info

# Security
# Path to signing key file (will be auto-generated if not exists)
SIGNING_KEY_PATH=./localhost.signing.key

# Federation Configuration
FEDERATION_TIMEOUT=30000
FEDERATION_MAX_RETRIES=3

# Performance
MAX_CONCURRENT_REQUESTS=100
QUEUE_BATCH_SIZE=50

# Development
NODE_ENV=development