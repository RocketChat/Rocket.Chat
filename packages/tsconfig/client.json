{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./base.json",
	"compilerOptions": {
		"target": "es2022",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"module": "esnext",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"jsx": "react-jsx",
		"preserveSymlinks": true,
	},
	"exclude": ["node_modules", "${configDir}/**/*.spec.ts"]
}
