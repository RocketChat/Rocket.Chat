{
	"name": "@rocket.chat/eslint-config",
	"type": "module",
	"version": "0.7.0",
	"description": "Rocket.Chat's JS/TS ESLint config",
	"scripts": {
		"build": "yarn gen && tsc -p tsconfig.build.json",
		"lint": "eslint .",
		"gen": "node --experimental-strip-types scripts/typegen.ts",
		"typecheck": "tsc --noEmit --checkJs false"
	},
	"devDependencies": {
		"@eslint/js": "^9.30.1",
		"@rocket.chat/tsconfig": "workspace:*",
		"eslint-config-prettier": "^10.1.5",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import-x": "^4.16.1",
		"eslint-plugin-jest": "^29.0.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-mocha": "^11.1.0",
		"eslint-plugin-prettier": "^5.5.1",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-security": "^3.0.1",
		"eslint-plugin-storybook": "^9.0.15",
		"eslint-plugin-testing-library": "^7.5.3",
		"eslint-typegen": "^2.2.1",
		"eslint": "^9.30.1",
		"globals": "^16.3.0",
		"typescript-eslint": "^8.36.0",
		"typescript": "^5.8.3"
	},
	"peerDependencies": {
		"jest-config": ">=30.0.0"
	},
	"peerDependenciesMeta": {
		"jest-config": {
			"optional": true
		}
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	]
}
