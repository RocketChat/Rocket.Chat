{
  "extends": "../../tsconfig/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "composite": false,
    "strict": true,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts"]
}
