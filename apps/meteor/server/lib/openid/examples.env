# OpenID Connect Configuration Examples
# Copy these to your .env file and customize for your provider

# ============================================================================
# Microsoft Entra ID (Azure AD)
# ============================================================================
Accounts_OpenID_EntraID=true
Accounts_OpenID_EntraID_id=your-application-id
Accounts_OpenID_EntraID_secret=your-client-secret
Accounts_OpenID_EntraID_url=https://login.microsoftonline.com/your-tenant-id/v2.0
Accounts_OpenID_EntraID_scope=openid profile email
Accounts_OpenID_EntraID_enable_slo=true
Accounts_OpenID_EntraID_button_label_text=Sign in with Microsoft
Accounts_OpenID_EntraID_button_color=#0078D4
Accounts_OpenID_EntraID_button_label_color=#FFFFFF

# ============================================================================
# Keycloak
# ============================================================================
Accounts_OpenID_Keycloak=true
Accounts_OpenID_Keycloak_id=rocketchat
Accounts_OpenID_Keycloak_secret=your-client-secret
Accounts_OpenID_Keycloak_url=https://keycloak.example.com/realms/master
Accounts_OpenID_Keycloak_scope=openid profile email roles
Accounts_OpenID_Keycloak_enable_slo=true
Accounts_OpenID_Keycloak_roles_claim=realm_access.roles
Accounts_OpenID_Keycloak_groups_claim=groups
Accounts_OpenID_Keycloak_button_label_text=Sign in with Keycloak
Accounts_OpenID_Keycloak_button_color=#4D4D4D
Accounts_OpenID_Keycloak_button_label_color=#FFFFFF

# ============================================================================
# Okta
# ============================================================================
Accounts_OpenID_Okta=true
Accounts_OpenID_Okta_id=your-client-id
Accounts_OpenID_Okta_secret=your-client-secret
Accounts_OpenID_Okta_url=https://your-domain.okta.com
Accounts_OpenID_Okta_scope=openid profile email groups
Accounts_OpenID_Okta_enable_slo=true
Accounts_OpenID_Okta_button_label_text=Sign in with Okta
Accounts_OpenID_Okta_button_color=#007DC1
Accounts_OpenID_Okta_button_label_color=#FFFFFF

# ============================================================================
# Google
# ============================================================================
Accounts_OpenID_Google=true
Accounts_OpenID_Google_id=your-client-id.apps.googleusercontent.com
Accounts_OpenID_Google_secret=your-client-secret
Accounts_OpenID_Google_url=https://accounts.google.com
Accounts_OpenID_Google_scope=openid profile email
Accounts_OpenID_Google_button_label_text=Sign in with Google
Accounts_OpenID_Google_button_color=#4285F4
Accounts_OpenID_Google_button_label_color=#FFFFFF

# ============================================================================
# Auth0
# ============================================================================
Accounts_OpenID_Auth0=true
Accounts_OpenID_Auth0_id=your-client-id
Accounts_OpenID_Auth0_secret=your-client-secret
Accounts_OpenID_Auth0_url=https://your-domain.auth0.com
Accounts_OpenID_Auth0_scope=openid profile email
Accounts_OpenID_Auth0_enable_slo=true
Accounts_OpenID_Auth0_button_label_text=Sign in with Auth0
Accounts_OpenID_Auth0_button_color=#EB5424
Accounts_OpenID_Auth0_button_label_color=#FFFFFF

# ============================================================================
# Generic OpenID Connect Provider
# ============================================================================
Accounts_OpenID_Generic=true
Accounts_OpenID_Generic_id=your-client-id
Accounts_OpenID_Generic_secret=your-client-secret
Accounts_OpenID_Generic_url=https://your-provider.com
Accounts_OpenID_Generic_scope=openid profile email
Accounts_OpenID_Generic_use_discovery=true
Accounts_OpenID_Generic_enable_slo=false
Accounts_OpenID_Generic_button_label_text=Sign in with SSO
Accounts_OpenID_Generic_button_color=#1d74f5
Accounts_OpenID_Generic_button_label_color=#FFFFFF

# ============================================================================
# Advanced Configuration Options
# ============================================================================

# Disable automatic discovery (use manual endpoint configuration)
# Accounts_OpenID_Provider_use_discovery=false
# Accounts_OpenID_Provider_token_path=/oauth/token
# Accounts_OpenID_Provider_authorize_path=/oauth/authorize
# Accounts_OpenID_Provider_userinfo_path=/oauth/userinfo
# Accounts_OpenID_Provider_jwks_uri=/oauth/jwks
# Accounts_OpenID_Provider_end_session_endpoint=/oauth/logout

# Custom claim mappings
# Accounts_OpenID_Provider_username_field=preferred_username
# Accounts_OpenID_Provider_email_field=email
# Accounts_OpenID_Provider_name_field=name
# Accounts_OpenID_Provider_avatar_field=picture

# Role and group mapping (Enterprise feature)
# Accounts_OpenID_Provider_roles_claim=roles
# Accounts_OpenID_Provider_groups_claim=groups
# Accounts_OpenID_Provider_merge_roles=true
# Accounts_OpenID_Provider_roles_to_sync=admin,user,moderator

# User merging
# Accounts_OpenID_Provider_merge_users=true
# Accounts_OpenID_Provider_merge_users_distinct_services=false
# Accounts_OpenID_Provider_key_field=email

# Token configuration
# Accounts_OpenID_Provider_token_sent_via=payload
# Accounts_OpenID_Provider_identity_token_sent_via=header
# Accounts_OpenID_Provider_response_type=code
# Accounts_OpenID_Provider_id_token_signing_alg=RS256

# ID Token handling
# Accounts_OpenID_Provider_claims_from_id_token=true
# Accounts_OpenID_Provider_validate_id_token=true

# UI customization
# Accounts_OpenID_Provider_login_style=redirect
# Accounts_OpenID_Provider_show_button=true
