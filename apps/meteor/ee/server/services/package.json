		"start:presence": "ts-node --files ./presence/service.ts",
		"start:stream-hub": "ts-node --files ./stream-hub/service.ts",
		"typecheck": "tsc --noEmit --skipLibCheck",
		"build": "tsc",
		"build-containers": "npm run build && docker-compose build && rm -rf ./dist",
