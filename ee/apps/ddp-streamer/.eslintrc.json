{
	"extends": ["@rocket.chat/eslint-config"],
	"overrides": [
		{
			"files": ["**/*.spec.js", "**/*.spec.jsx"],
			"env": {
				"jest": true
			}
		}
	],
	"ignorePatterns": ["**/coverage", "**/dist"],
	"plugins": ["jest"],
	"env": {
		"jest/globals": true
	},
	"parserOptions": {
		"project": true
	}
}
