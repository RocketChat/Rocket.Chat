{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "paths": {
      "@rocket.chat/homeserver": ["../../packages/homeserver"],
      "@rocket.chat/http-router": ["../../packages/http-router"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}